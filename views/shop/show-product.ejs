<% layout('layouts/boilerplate.ejs') %>
<main>
  <div class="row my-3">
    <div class="col-md-6 offset-3">
      <div class="card my-3">
        <img src="<%= book.imageUrl %>" class="card-img-top" alt="A Book" />
        <div class="card-body">
          <h5 class="card-title" style="max-height: 48px; height: 48px">
            <%= book.title %>
          </h5>
          <h6 class="card-subtitle mb-2 text-muted"><% book.author %></h6>
          <p class="card-text" style="height: 120px"><%=book.description %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= book.price %></li>
        </ul>
        <div class="card-body">
          <form action="/cart/<%=book._id%>" method="post" class="d-inline-block">
            <button class="btn btn-sm btn-warning d-inline-block ">Add to Cart</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>
