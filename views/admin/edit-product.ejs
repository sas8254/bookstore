<% layout('layouts/boilerplate.ejs') %>
<main>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form
        novalidate
        class="needs-validation"
        action="/admin/product/<%=book._id%>?_method=PUT"
        method="POST"
      >
        <div class="my-3">
          <label class="form-label" for="title">Title</label>
          <input
            class="form-control"
            type="text"
            name="book[title]"
            id="title"
            value="<%= book.title%>"
            required
          />
        </div>
        <div class="my-3">
          <label class="form-label" for="author">Author</label>
          <input
            class="form-control"
            type="text"
            name="book[author]"
            id="author"
            value="<%= book.author%>"
            required
          />
        </div>
        <div class="my-3">
          <label class="form-label" for="description" required
            >Description</label
          >
          <textarea
            class="form-control"
            type="text"
            id="description"
            name="book[description]"
            required
          ><%= book.description%></textarea>
        </div>
        <div class="my-3">
          <label class="form-label" for="price">Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input
              type="text"
              id="price"
              class="form-control"
              placeholder="0.00"
              name="book[price]"
              value="<%= book.price %>"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>
        </div>
        <div class="my-3">
          <label class="form-label" for="image">Image Url</label>
          <input
            class="form-control"
            type="text"
            name="book[imageUrl]"
            id="image"
            value="<%= book.imageUrl%>"
            required
          />
        </div>
        <button class="btn btn-success" type="submit">Update Product</button>
      </form>
    </div>
  </div>
</main>
