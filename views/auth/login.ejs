<% layout('layouts/boilerplate.ejs') %>
<main>
    <div class="container justify-content-center align-items-center mt-4">
        <div class="row">
          <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
              <img src="https://images.unsplash.com/photo-1584801096196-592feb269e31?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8Ym9va3N0b3JlfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500&q=60"
                      alt="" class="card-img-top" style="height: 300px;" />
             <div class="card-body">
              <h5 class="card-title">Login</h5>
              <form
              action="/login"
              method="post"
              novalidate
              class="needs-validation"
              required
            >
              <div class="mb-3">
                <label class="form-label" for="email">Email</label>
                <input
                  class="form-control"
                  type="text"
                  id="email"
                  name="email"
                  required
                  autofocus
                />
                <div class="valid-feedback">Looks good!</div>
              </div>
              <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input
                  class="form-control"
                  type="password"
                  id="password"
                  name="password"
                  required
                />
                <div class="valid-feedback">Looks good!</div>
              </div>
              <button class="btn btn-success w-100">Login</button>
            </form>
             </div>
            </div>
          </div>
        </div>
      </div>
</main>